{
    "particles": {
        "number": {
            "value": 300
        },
        "color": {
            "value": "#fff"
        },
        "shape": {
            "type": "circle",
            "stroke": {
                "width": 1.5,
                "color": "#ff0000c7"
            }
        },
        "opacity": {
            "value": 1,
            "random": true,
            "anim": {
                "enable": true,
                "speed": 100            }
        },
        "size": {
            "value": 3.5,
            "random": true,
            "anim": {
                "color": "#000",
                "enable": true,
                "speed": 100
            }
        },
        "line_linked": {
            "enable": true,
            "width": 20,
            "color": "#ccc",
            "distance": 80
        },
        "move": {
            "enable": true,
            "speed": 1,
            "direction": "none"
        }
    },
    "interactivity":{
        "events":{
            "onhover":{
                "enable": true,
                "mode": "repulse"
            },
            "onclick":{
                "enable": true,
                "mode": "remove"
            }
        },
        "modes":{
            "repulse":{
                "distance": 80,
                "speed": 200
            },
            "remove":{
                "distance": 120
            }
        }
    }
   
}
